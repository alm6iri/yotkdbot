{
  "name": "Telegram Downloader Bot",
  "description": "A multilingual Telegram bot that downloads videos (YouTube/TikTok/Twitter) and converts to audio",
  "repository": "https://github.com/alm6iri/yotkdbot",
  "logo": "https://raw.githubusercontent.com/alm6iri/yotkdbot/main/logo.png",
  "keywords": ["telegram","bot","video","audio","downloader"],
  "buildpacks": [
    { "url": "heroku/python" }
  ],
  "env": {
    "API_ID": { "description": "Telegram API ID from my.telegram.org", "required": true },
    "API_HASH": { "description": "Telegram API_HASH from my.telegram.org", "required": true },
    "BOT_TOKEN": { "description": "Telegram Bot Token from @BotFather", "required": true }
  },
  "formation": {
    "worker": { "quantity": 1, "size": "Eco" }
  }
}